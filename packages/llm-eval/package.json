{
  "name": "jest-llm-eval",
  "version": "1.0.0",
  "description": "AI-powered evaluation framework for testing LLM responses with Jest",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jest-llm-eval": "./dist/cli-viewer.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./terminal-reporter": {
      "import": "./dist/terminal-reporter.js",
      "require": "./dist/terminal-reporter.js",
      "types": "./dist/terminal-reporter.d.ts"
    },
    "./evaluation-reporter": {
      "import": "./dist/evaluation-reporter.js",
      "require": "./dist/evaluation-reporter.js",
      "types": "./dist/evaluation-reporter.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "jest",
    "testing",
    "llm",
    "ai",
    "evaluation",
    "language-model",
    "test-framework",
    "typescript"
  ],
  "author": "Oleksandr Erm",
  "license": "MIT",
  "homepage": "https://github.com/alexerm/jest-llm-eval#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexerm/jest-llm-eval.git"
  },
  "bugs": {
    "url": "https://github.com/alexerm/jest-llm-eval/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "@jest/globals": "^30.0.0",
    "jest": "^30.0.0"
  },
  "dependencies": {
    "ai": "^3.2.36",
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "boxen": "^8.0.1",
    "ora": "^8.0.1",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.0",
    "@types/figlet": "^1.5.8",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.10.0",
    "jest": "^30.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.4"
  }
}